{
    "name": "wordpress",
    "version": "1.0.0",
    "main": "index.js",
    "config": {
        "src_path": "./src",
        "dist_path": "./Local sites/app/public/wp-content/themes",
        "theme_name": "splide"
    },
    "browserslist": [
        "> 1% in JP",
        "last 3 versions",
        "Firefox ESR",
        "iOS >= 10",
        "Android >= 5",
        "not dead"
    ],
    "scripts": {
        "watch:webpack": "MODE=development webpack -w",
        "watch:images": "chokidar \"$npm_package_config_src_path/img/**/*\" --command \"npm run build:images\" --initial",
        "dev": "npm-run-all clean -p watch:*",
        "build:webpack": "MODE=production webpack --mode production",
        "build:images": "node imagemin.mjs",
        "clean": "rimraf \"$npm_package_config_dist_path/$npm_package_config_theme_name/js\" \"$npm_package_config_dist_path/$npm_package_config_theme_name/css\" \"$npm_package_config_dist_path/$npm_package_config_theme_name/img\"",
        "build": "npm-run-all -s clean build:*"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/preset-env": "^7.26.0",
        "autoprefixer": "^10.4.20",
        "babel-loader": "^9.2.1",
        "browser-sync-webpack-plugin": "^2.3.0",
        "chokidar-cli": "^3.0.0",
        "copy-webpack-plugin": "^12.0.2",
        "css-declaration-sorter": "^7.2.0",
        "css-loader": "^7.1.2",
        "imagemin-gifsicle": "^7.0.0",
        "imagemin-keep-folder": "^5.3.2",
        "imagemin-mozjpeg": "^10.0.0",
        "imagemin-pngquant": "^10.0.0",
        "imagemin-svgo": "^11.0.1",
        "imagemin-webp": "^8.0.0",
        "mini-css-extract-plugin": "^2.9.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.49",
        "postcss-loader": "^8.1.1",
        "postcss-sort-media-queries": "^5.2.0",
        "rimraf": "^6.0.1",
        "sass": "^1.81.0",
        "sass-loader": "^16.0.3",
        "style-loader": "^4.0.0",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4",
        "webpack-fix-style-only-entries": "^0.6.1"
    },
    "dependencies": {
        "@splidejs/splide": "^4.1.4",
        "gsap": "^3.12.5",
        "kiso.css": "^1.1.6",
        "lenis": "^1.1.17",
        "micromodal": "^0.4.10",
        "scroll-hint": "^1.2.8",
        "swiper": "^8.4.7"
    }
}
